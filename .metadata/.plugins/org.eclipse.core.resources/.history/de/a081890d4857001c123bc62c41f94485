package com.user;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;

@SpringBootApplication
@EnableEurekaClient
public class UserProfileServiceApplication implements CommandLineRunner{

	
	@Autowired
	private UserRepository repo;
	
	
	public static void main(String[] args) {
		SpringApplication.run(UserProfileServiceApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		// TODO Auto-generated method stub
		if(repo.findAll().isEmpty())
		{
		repo.save(new User("Max Verstappen","Customer","max33@rb.com","M","Best user"));
		repo.save(new User("Sergio Perez","Merchant","checo11@rb.com","M","I am merchant"));
		}
		for(User u:repo.findAll())
		{
		System.out.println(u);
		}
	}

}
